<!DOCTYPE html>
<html lang="en">

<head>
    <%- include ("partials/head.ejs") %>
        <title>Profile page </title>
</head>

<body class="profile">
    <% let currentPerson = users.length - 1; %>
        <ul>
            <li>
                <a href="/"><img src="images/icons/back.svg" alt="back"></a>
            </li>
            <li>
                <a href="#"><img src="images/icons/share.svg" alt="share"></a>
            </li>
        </ul>
        <section>
            <picture>
                <source srcset="images/users/<%= users[currentPerson].photo %>.jpg" media="(min-width: 768px)">
                <img src="images/users/<%= users[currentPerson].photo %>min.jpg" />
            </picture>
            <div></div>
            <div></div>
        </section>
        <section>
            <article>
                <h2>
                    <%= users[currentPerson].name %>,
                        <%= users[currentPerson].age %>
                </h2>
                <h3>
                    <%= users[currentPerson].work %>
                </h3>
                <div class="images">
                    <img src="images/users/<%= users[currentPerson].photo %>min.jpg" alt="Profile picture of ">
                    <img src="images/users/<%= users[currentPerson].photo %>min.jpg" alt="Profile picture of ">
                    <img src="images/users/<%= users[currentPerson].photo %>min.jpg" alt="Profile picture of ">
                </div>
                <div>
                    <h4>Hobby's</h4>
                    <p>Fitness, Reizen, Bakken</p>

                </div>
                <div>
                    <h4>About</h4>
                    <p>Lorem ipsum dolor sit amet, consectetur adipiscing elit. Nullam odio neque enim facilisi eu nunc in amet, vestibulum.</p>
                </div>
                <form action="/" method="POST"></form>
                <label for="dislike">
                        <input type="submit" name="dislike" class="dislike" data-id="<%= users[currentPerson].id %>" value="&times">
                    </label>
                <label for="like">
                        <input type="submit" name="like" class="like" data-id="<%= users[currentPerson]._id %>" value="❤">
                    </label>
                </form>
            </article>
        </section>
</body>

</html>