<!DOCTYPE html>
<html lang="en">

<head>
    <%- include ("partials/head.ejs") %>
        <title>Home</title>
</head>

<body>
    <header>
        <h1>Swiper</h1>
    </header>

    <main>
        <ul>
            <% for (let i = 0; i <users.length; i++) { %>
                <li>
                    <figure>
                        <a href="profile">
                            <img src="images/users/<%= users[i].photo %>" alt="Profile picture of ">
                            <figcaption>
                                <h2>
                                    <%= users[i].name %>, <%= users[i].age %>
                                </h2>
                                <h3>
                                    <%= users[i].work %>, <%= users[i].id %>
                                </h3>
                                <form action="/match" method="POST">
                                    <label for="dislike">
                                        <input type="checkbox" name="dislike" class="dislike" data-id="<%= users[i].id %>">
                                    </label>
                                    <label for="like">
                                        <input type="checkbox" name="like" class="like" data-id="<%= users[i].id %>">
                                    </label>
                                    <input type="submit" value="Verstuur">
                                </form>
                            </figcaption>
                        </a>
                    </figure>
                </li>
                <% } %>
        </ul>
    </main>

    <footer>
        <%- include ("partials/footernav-home.ejs") %>
    </footer>
    <script src="scripts/script.js"></script>
</body>

</html>